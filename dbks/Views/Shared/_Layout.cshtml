<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background-color: #f8f9fa;
            color: #4a4a4a;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            width: 250px;
            background-color: #2c3e50; /* 深蓝色 */
            padding: 15px;
            overflow-y: auto;
            color: #ffffff;
        }

            .sidebar .nav-link {
                color: #ffffff;
                transition: color 0.3s ease;
            }

                .sidebar .nav-link:hover {
                    color: #ecf0f1; /* 浅灰色 */
                }

        .content {
            margin-left: 250px; /* 与侧边栏宽度相匹配 */
            padding: 30px;
            background-color: #ffffff;
        }

        .footer {
            background-color: #2c3e50; /* 深蓝色 */
            color: #ffffff;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/Administrator/AdministratorUser">管理员端(Index/开始）</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrator/AdministratorUser1">员工信息管理</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrator/AdministratorUser2">员工薪资管理</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrator/AdministratorUser3">查询</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Administrator/AdministratorUser4">统计</a>
            </li>
        </ul>
    </div>

    <div class="content">
        <!-- 这里放置页面内容 -->
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <span>© 2023 管理员端. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>