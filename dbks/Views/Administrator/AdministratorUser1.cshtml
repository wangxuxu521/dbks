@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "员工信息管理";
}
@using Microsoft.AspNetCore.Mvc.Localization
@model List<Employee>
<head>
    <!-- 其他头部内容 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>


        <h2>员工列表</h2>
<div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>员工ID</th>
                    <th>姓名</th>
                    <th>部门ID</th>
                    <th>部门</th>
                    <th>职位ID</th>
                    <th>职位</th>
                    <th>薪资</th>
                    <th>薪资ID</th>
                    <th>工作状态</th>
                    <th>年龄</th>
                    <th>性别</th>
                    <th>电话</th>
                    <th>电子邮件</th>
                    <th>地址</th>
                    <th>家庭信息</th>
                </tr>

            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EmployeeId</td>
                            <td>@item.Name</td>
                            <td>@item.DeptId</td> <!-- 显示部门ID -->
                            <td>@item.Dept?.DeptName</td> <!-- 显示部门名称 -->
                            <td>@item.PositionId</td> <!-- 显示职位ID -->
                            <td>@item.Position?.PositionName</td> <!-- 显示职位名称 -->
                            <td>@item.Salaries?.SalaryM</td> <!-- 显示薪资 -->
                            <td>@item.SalaryId</td><!-- 显示薪资ID -->
                            <td>@item.OnJob</td> <!-- 显示工作状态 -->
                            <td>@item.Age</td> <!-- 显示年龄 -->
                            <td>@item.Gender</td> <!-- 显示性别 -->
                            <td>@item.Phone</td> <!-- 显示电话 -->
                            <td>@item.Email</td> <!-- 显示电子邮件 -->
                            <td>@item.Address</td> <!-- 显示地址 -->
                            <td>@item.FamilyInfo</td> <!-- 显示家庭信息 -->
                            <td>
                                <a href="@Url.Action("AdminEdit", "Administrator", new { id = item.EmployeeId })">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="14">无数据</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="buttons-container" style="text-align: center; margin-top: 20px;">
            <a asp-action="AddEmployee" class="btn btn-primary">添加员工</a>
            <a asp-action="ImportEmployee" class="btn btn-primary">添加员工</a>
        </div>
</div>
