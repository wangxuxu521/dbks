@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "查询";
}
@using Microsoft.AspNetCore.Mvc.Localization
@model List<Employee>
<head>
    <!-- 其他头部内容 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>


    <h1>查询</h1>
    <div class="container mt-5">
        <form asp-controller="Administrator" asp-action="AdministratorUser3" method="get" class="needs-validation">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="font-weight-bold" for="name">Name:</label>
                    <input class="form-control form-control-lg" type="text" id="name" name="name">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="font-weight-bold" for="employId">Employee ID:</label>
                    <input class="form-control form-control-lg" type="text" id="employId" name="employId">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="font-weight-bold" for="deptId">Dept ID:</label>
                    <input class="form-control form-control-lg" type="text" id="deptId" name="deptId">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="font-weight-bold" for="position">Position:</label>
                    <input class="form-control form-control-lg" type="text" id="position" name="position">
                </div>
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="submit">搜索</button>
        </form>
    </div>
    <h2>员工列表</h2>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>员工ID</th>
                <th>姓名</th>
                <th>部门ID</th>
                <th>部门</th>
                <th>职位ID</th>
                <th>职位</th>
                <th>薪资</th>
                <th>薪资ID</th>
                <th>工作状态</th>
                <th>年龄</th>
                <th>性别</th>
                <th>电话</th>
                <th>电子邮件</th>
                <th>地址</th>
                <th>家庭信息</th>
            </tr>

        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeId</td>
                        <td>@item.Name</td>
                        <td>@item.DeptId</td> <!-- 显示部门ID -->
                        <td>@item.Dept?.DeptName</td> <!-- 显示部门名称 -->
                        <td>@item.PositionId</td> <!-- 显示职位ID -->
                        <td>@item.Position?.PositionName</td> <!-- 显示职位名称 -->
                        <td>@item.Salary?.SalaryM</td> <!-- 显示薪资 -->
                        <td>@item.SalaryId</td><!-- 显示薪资ID -->
                        <td>@item.OnJob</td> <!-- 显示工作状态 -->
                        <td>@item.Age</td> <!-- 显示年龄 -->
                        <td>@item.Gender</td> <!-- 显示性别 -->
                        <td>@item.Phone</td> <!-- 显示电话 -->
                        <td>@item.Email</td> <!-- 显示电子邮件 -->
                        <td>@item.Address</td> <!-- 显示地址 -->
                        <td>@item.FamilyInfo</td> <!-- 显示家庭信息 -->
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="14">无数据</td>
                </tr>
            }
        </tbody>
    </table>
</div>


