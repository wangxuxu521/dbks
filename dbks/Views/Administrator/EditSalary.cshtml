@model Salary

<h2>修改薪资信息</h2>

<form asp-action="EditSalary" method="post">
    
    <div class="form-group">
        <label asp-for="SalaryId">薪资卡号</label>
        <input asp-for="SalaryId" class="form-control"  readonly />
        <span asp-validation-for="SalaryId" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="BasicSalary">基础工资</label>
        <input asp-for="BasicSalary" class="form-control"  >
        <span asp-validation-for="BasicSalary" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Bonus">奖金</label>
        <input asp-for="Bonus" class="form-control" >
        <span asp-validation-for="Bonus" class="text-danger"></span>
    </div>

    <div style="text-align: center; margin-top: 20px;">
        <button type="submit" class="btn btn-primary">保存修改</button>
        <button type="button" class="btn btn-primary" onclick="history.back()">取消</button>
    </div>
</form>