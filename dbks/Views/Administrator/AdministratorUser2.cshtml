@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "员工薪资管理";
}
@using Microsoft.AspNetCore.Mvc.Localization
@model List<Employee>
<head>
    <!-- 其他头部内容 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="table-container">
        <div class="container mt-5">
            <form asp-action="Index" method="get">
                <input type="text" name="searchString" placeholder="搜索..." />
                <button type="submit">搜索</button>
            </form>
        </div>
        <h2>员工薪资列表</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>员工ID</th>
                    <th>姓名</th>
                    <th>部门ID</th>
                    <th>部门</th>
                    <th>职位ID</th>
                    <th>职位</th>
                    <th>薪资ID</th>
                    <th>薪资ID</th>
                    <th>基础工资</th>
                    <th>个人所得税</th>
                    <th>奖金</th>
                    <th>日期</th>
                </tr>

            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td>@item.EmployeeId</td>
                                <td>@item.Name</td>
                                <td>@item.DeptId</td> <!-- 显示部门ID -->
                                <td>@item.Dept?.DeptName</td> <!-- 显示部门名称 -->
                                <td>@item.PositionId</td> <!-- 显示职位ID -->
                                <td>@item.Position?.PositionName</td> <!-- 显示职位名称 -->
                                <td>@item.Salary?.SalaryId</td> <!-- 显示薪资 -->
                                <td>@item.Salary?.Salary1</td> <!-- 显示薪资 -->
                                <td>@item.Salary?.BasicSalary</td> <!-- 显示基础工资 -->
                                <td>@item.Salary?.PersonalIncome</td>  <!-- 显示个人税 -->
                                <td>@item.Salary?.Bonus</td> <!-- 显示性别 -->
                                <td>@item.Salary?.PayDate</td> <!-- 显示电话 -->
                            <td>
                                <a href="@Url.Action("AdminEdit", "Administrator", new { id = item.EmployeeId })">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                    </tr>
                    }
                }
                else
                {
                            <tr>
                                <td colspan="14">无数据</td>
                            </tr>
                }
            </tbody>
        </table>
        <div class="buttons-container" style="text-align: center; margin-top: 20px;">
            <a asp-action="AddEmployee" class="btn btn-primary">添加员工</a>
        </div>
    </div>
</body>