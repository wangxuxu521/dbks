@{
    Layout = null;
}

@model dbks.Models.Administrator

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - 管理员登录</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 30px;
                color: #34495e;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 10px;
                color: #34495e;
            }

            .form-group input {
                width: 100%;
                padding: 12px;
                border: 1px solid #ced4da;
                border-radius: 6px;
                font-size: 16px;
            }

            .form-group .error {
                color: #dc3545;
                font-size: 14px;
                margin-top: 5px;
            }

        .btn-custom {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 12px 24px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }

        .error-message {
            color: #dc3545;
            font-size: 14px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>管理员登录</h2>

        <form action="/Administrator/LoginUser" method="post">
            <div class="form-group">
                <label asp-for="Administratorname" class="control-label"></label>
                <input asp-for="Administratorname" class="form-control" />
                <span asp-validation-for="Administratorname" class="error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administratorid" class="control-label"></label>
                <input asp-for="Administratorid" type="password" class="form-control" />
                <span asp-validation-for="Administratorid" class="error"></span>
                @if (ViewData["Message"] != null)
                {
                    <div class="error-message">
                        @ViewData["Message"]
                    </div>
                }
            </div>
            <button type="submit" class="btn btn-custom btn-block">登录</button>
            <div>
                <span asp-validation-summary="All" class="error"></span>
            </div>
            <div style="text-align: center; margin-top: 20px;">
                <a href="@Url.Action("Main", "Home")">返回首页</a>
            </div>
        </form>
    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.4.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>