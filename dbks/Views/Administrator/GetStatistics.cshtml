@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "GetStatistics";
}
<canvas id="salaryChart" width="800" height="400"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div>
    <!-- 统计结果将显示在这里 -->
    <h3>薪资统计结果</h3>
    <table>
        <thead>
            <tr>
                <th>员工姓名</th>
                <th>部门</th>
                <th>职位</th>
                <th>薪资</th>
                <th>发放日期</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var result in Model)
                {
                    <tr>
                        <td>@result.Name</td>
                        <td>@result.Dept?.DeptName</td>
                        <td>@result.Position?.PositionName</td>
                        <td>@result.Salary?.SalaryM</td>
                        <td>@result.Salary?.PayDate</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <img src="@Url.Action("GenerateSalaryChart", "ControllerName")" alt="薪资统计图表" />
    <div style="text-align: center; margin-top: 20px;">  
        <button type="button" class="btn btn-primary" onclick="history.back()">返回</button>
    </div>
</div>


