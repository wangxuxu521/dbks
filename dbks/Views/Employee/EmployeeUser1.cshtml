@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "信息管理";
}
<h1>信息管理</h1>
@using Microsoft.AspNetCore.Mvc.Localization
@model Employee
@using dbks.Controllers
@using dbks.Models
<head>
    <!-- 其他头部内容 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>


<!-- 引入字体图标库 -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<body>
    <div class="container">
        <h2>员工信息</h2>
        <dl class="row">
            <dt class="col-sm-3">员工ID</dt>
            <dd class="col-sm-9">@Model.EmployeeId</dd>
             
            <dt class="col-sm-3">姓名</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">部门</dt>
            <dd class="col-sm-9">@Model.Dept?.DeptName</dd>

            <dt class="col-sm-3">职位</dt>
            <dd class="col-sm-9">@Model.Position?.PositionName</dd>

            <dt class="col-sm-3">薪资</dt>
            <dd class="col-sm-9">@Model.Salaries?.SalaryM</dd>

            <dt class="col-sm-3">工作状态</dt>
            <dd class="col-sm-9">@Model.OnJob</dd>

            <dt class="col-sm-3">年龄</dt>
            <dd class="col-sm-9">@Model.Age</dd>

            <dt class="col-sm-3">性别</dt>
            <dd class="col-sm-9">@Model.Gender</dd>

            <dt class="col-sm-3">电话</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">电子邮件</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">地址</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">家庭信息</dt>
            <dd class="col-sm-9">@Model.FamilyInfo</dd>
        </dl>
        <a asp-controller="Employee" asp-action="EmployeeEdit" asp-route-id="@Model.EmployeeId" class="btn btn-primary">修改员工信息</a>

</body>
