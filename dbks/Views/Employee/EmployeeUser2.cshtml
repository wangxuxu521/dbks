@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "薪资查询";
}
@model List<Employee>
<h1>薪资查询</h1>
<div>
    <!-- 统计结果将显示在这里 -->
    <h3>薪资统计结果</h3>
    <table>
        <thead>
            <tr>
                <th>员工ID</th>
                <th>姓名</th>
                <th>部门ID</th>
                <th>部门</th>
                <th>职位ID</th>
                <th>职位</th>
                <th>薪资ID</th>
                <th>薪资ID</th>
                <th>基础工资</th>
                <th>个人所得税</th>
                <th>奖金</th>
                <th>日期</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EmployeeId</td>
                        <td>@item.Name</td>
                        <td>@item.DeptId</td> <!-- 显示部门ID -->
                        <td>@item.Dept?.DeptName</td> <!-- 显示部门名称 -->
                        <td>@item.PositionId</td> <!-- 显示职位ID -->
                        <td>@item.Position?.PositionName</td> <!-- 显示职位名称 -->
                        <td>@item.Salary?.SalaryId</td> <!-- 显示薪资 -->
                        <td>@item.Salary?.SalaryM</td> <!-- 显示薪资 -->
                        <td>@item.Salary?.BasicSalary</td> <!-- 显示基础工资 -->
                        <td>@item.Salary?.PersonalIncome</td>  <!-- 显示个人税 -->
                        <td>@item.Salary?.Bonus</td> <!-- 显示性别 -->
                        <td>@item.Salary?.PayDate</td> <!-- 显示电话 -->
                    </tr>
                }
            }
        </tbody>
    </table>
    <img src="@Url.Action("GenerateSalaryChart", "ControllerName")" alt="薪资统计图表" />
    <div style="text-align: center; margin-top: 20px;">
        <button type="button" class="btn btn-primary" onclick="history.back()">返回</button>
    </div>
</div>


