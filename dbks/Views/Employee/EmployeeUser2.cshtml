
@model List<EmployeeSalaryViewModel>
@{
    ViewData["Title"] = "员工薪资详情";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>员工ID</th>
            <th>姓名</th>
            <th>薪资ID</th>
            <th>基础工资</th>
            <th>个人所得税</th>
            <th>奖金</th>
            <th>日期</th>
            <th>税率</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var employee in Model)
            {
                foreach (var salary in employee.Salaries)
                {
                    <tr>
                        <td>@employee.EmployeeId</td>
                        <td>@employee.Name</td>
                        <td>@salary.SalaryId</td> <!-- 显示薪资ID -->
                        <td>@salary.BasicSalary</td> <!-- 显示基础工资 -->
                        <td>@salary.PersonalIncome</td>  <!-- 显示个人税 -->
                        <td>@salary.Bonus</td> <!-- 显示奖金 -->
                        <td>@salary.PayDate</td> <!-- 显示日期 -->
                        <td>@salary.TaxRate</td> <!-- 显示税率 -->
                    </tr>
                }
            }
        }
        else
        {
            <tr>
                <td colspan="9">无数据</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-primary">返回</a>
</div>